<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	xmlns:z="clr-namespace:Zumero;assembly=Zumero.DataGrid"
	x:Class="ffmobile.ContactsGrid">
	<z:DataGrid x:Name="dataGrid" >
		<z:DataGrid.Columns>
			<z:Column>
				<z:Column.HeaderView>
					<Label Text="Contact Name" BackgroundColor="Gray"></Label>
				</z:Column.HeaderView>
	            <z:Column.Template>
	                <DataTemplate>
	                    <Label Text="{Binding ContactName}"  />
	                </DataTemplate>
	            </z:Column.Template>
	        </z:Column>
			<z:Column>
			  	<z:Column.HeaderView>
					<Label Text="Contact Type" BackgroundColor="Gray"></Label>
				</z:Column.HeaderView>
	            <z:Column.Template>
	                <DataTemplate>
	                    <Label Text="{Binding ContactType}" />
	                </DataTemplate>
	            </z:Column.Template>
	        </z:Column>



			<z:Column>
			  	<z:Column.HeaderView>
					<Label Text="Company Name" BackgroundColor="Gray"></Label>
				</z:Column.HeaderView>
	            <z:Column.Template>
	                <DataTemplate>
	                    <Label Text="{Binding CompanyName}" />
	                </DataTemplate>
	            </z:Column.Template>
	        </z:Column>



			<z:Column>
			  	<z:Column.HeaderView>
					<Label Text="Email" BackgroundColor="Gray"></Label>
				</z:Column.HeaderView>
	            <z:Column.Template>
	                <DataTemplate>
	                    <Label Text="{Binding Email}" />
	                </DataTemplate>
	            </z:Column.Template>
	        </z:Column>



			




		</z:DataGrid.Columns>    
	</z:DataGrid>
</ContentPage>
